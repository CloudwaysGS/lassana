		<link href="{{ asset('startbootstrap-sb-admin-2-4.1.4/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
		<link
		href="{{ asset('https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i') }}" rel="stylesheet">

		<!-- Custom styles for this template-->
		<link href="{{ asset('startbootstrap-sb-admin-2-4.1.4/css/sb-admin-2.min.css') }}" rel="stylesheet">
		<link href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}" rel="stylesheet">

	</head>
	{% block body %}


		<div class="container col-md-13">
			<div class="card ">
				<div class="card-header">Facture</div>
				<div class="card-body">
					<div class="table-responsive">
						<table id="facture_liste" class="table table-striped table-hover text-center">
							<tr>
								<th>Qté acheté</th>
								<th>Produit</th>
								<th>PrixUnit</th>
								<th>Montant</th>
								<th>Retour</th>
							</tr>
							{% set total = 0 %}
							{% for f in f %}
								<tr>
									<td>{{ f.quantite }}</td>
									<td>
										{% if f.nomProduit > 0 %}
											{{ f.nomProduit }}
										{% endif %}
									</td>
									<td>
										{% if f.prixUnit > 0 %}
											{{ f.prixUnit|number_format(0, ',', ' ') }}
										{% endif %}
									</td>
									<td>{{ f.montant | number_format(0, ',', ' ') }}</td>

								</tr>
								{% set total = total + f.montant %}
							{% endfor %}
							<td>Total</td>
							<td></td>
							<td></td>
							<td>{{ total|number_format(0, ',', ' ') }}
								f
							</td>
							<td></td>
						</table>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}

	{% block javascripts %}
		<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>

	{% endblock %}
</html>

